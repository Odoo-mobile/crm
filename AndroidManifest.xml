<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.odoo.crm"
    android:versionCode="1"
    android:versionName="1.0alpha" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name="com.odoo.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:logo="@drawable/ic_odoo_o"
        android:theme="@style/AppTheme" >

        <!-- Android Account Authentication Service -->
        <service android:name="com.odoo.auth.OdooAuthenticateService" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" >
                </action>
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" >
            </meta-data>
        </service>

        <activity
            android:name="com.odoo.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.odoo.BaseSettings"
            android:theme="@style/PreferenceTheme" >
            <intent-filter>
                <action android:name="com.odoo.ACTION_ACCOUNT_BASE_CONFIG" />

                <category android:name="android.intent.category.PREFERENCE" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.odoo.GeneralSettings"
            android:theme="@style/PreferenceTheme" >
            <intent-filter>
                <action android:name="com.odoo.ACTION_ACCOUNT_GENERAL_CONFIG" />

                <category android:name="android.intent.category.PREFERENCE" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.odoo.base.about.About"
            android:theme="@style/PreferenceTheme" >
            <intent-filter>
                <action android:name="com.odoo.ACTION_ABOUT" />
            </intent-filter>
        </activity>

        <!-- Base Providers (Note: update authority as per your app package) -->
        <provider
            android:name="com.odoo.base.ir.providers.model.ModelProvider"
            android:authorities="com.odoo.crm.base.ir.providers.model"
            android:exported="false"
            android:multiprocess="true" />
        <provider
            android:name="com.odoo.base.res.providers.users.UsersProvider"
            android:authorities="com.odoo.crm.base.res.providers.users"
            android:exported="false"
            android:multiprocess="true" />
        <provider
            android:name="com.odoo.base.ir.providers.attachments.AttachmentProvider"
            android:authorities="com.odoo.crm.base.ir.providers.attachments"
            android:exported="false"
            android:multiprocess="true" />
        <provider
            android:name="com.odoo.base.res.providers.country.CountryProvider"
            android:authorities="com.odoo.crm.base.res.providers.country"
            android:exported="false"
            android:multiprocess="true" />
        <provider
            android:name="com.odoo.base.res.providers.company.CompanyProvider"
            android:authorities="com.odoo.crm.base.res.providers.company"
            android:exported="false"
            android:multiprocess="true" />
        <provider
            android:name="com.odoo.base.res.providers.partners.PartnersProvider"
            android:authorities="com.odoo.crm.base.res.providers.partners"
            android:enabled="true"
            android:exported="false"
            android:label="Partner"
            android:multiprocess="true"
            android:syncable="true" />

        <!-- /Base Providers -->
        <!-- Contact service -->
        <!--
        <service
            android:name="com.odoo.base.res.services.ContactSyncService"
            android:exported="true"
            android:process=":contacts" >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/sync_contacts" />
            <meta-data
                android:name="android.provider.CONTACTS_STRUCTURE"
                android:resource="@xml/contacts" />

        </service>
        -->
        <!-- Lead/Opportunity service -->
        <provider
            android:name="com.odoo.addons.crm.providers.crm.CRMProvider"
            android:authorities="com.odoo.addons.crm.providers.crm"
            android:enabled="true"
            android:exported="false"
            android:label="Leads/Opportunities"
            android:syncable="true" />
        <provider
            android:name="com.odoo.addons.crm.providers.crm.CrmCaseStageProvider"
            android:authorities="com.odoo.addons.crm.providers.crm.casestage"
            android:enabled="true"
            android:exported="false"
            android:label="Crm Case Stage"
            android:syncable="true" />
        <provider
            android:name="com.odoo.addons.crm.providers.crm.CrmCaseCategProvider"
            android:authorities="com.odoo.addons.crm.providers.crm.casecateg"
            android:enabled="true"
            android:exported="false"
            android:label="Crm Case Categ"
            android:syncable="true" />
        <provider
            android:name="com.odoo.addons.crm.providers.crm.CrmPaymentModeProvider"
            android:authorities="com.odoo.addons.crm.providers.crm.paymentmode"
            android:enabled="true"
            android:exported="false"
            android:label="Crm Payment Mode"
            android:syncable="true" />
        <provider
            android:name="com.odoo.addons.crm.providers.crm.PhoneCallProvider"
            android:authorities="com.odoo.addons.crm.providers.crm.phonecall"
            android:enabled="true"
            android:exported="true"
            android:label="Phone Call"
            android:syncable="true" />

        <service
            android:name="com.odoo.addons.crm.services.CRMService"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/sync_crm_data" />
        </service>
        <service
            android:name="com.odoo.addons.crm.services.CRMPhoneCallService"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/sync_crm_phone" />
        </service>
        <!-- Quotation/SalesOrder service -->
        <provider
            android:name="com.odoo.addons.sale.providers.sale.SalesProvider"
            android:authorities="com.odoo.addons.sale.providers.sale"
            android:enabled="true"
            android:exported="false"
            android:label="Quotation/SalesOrder"
            android:syncable="true" />
        <provider
            android:name="com.odoo.addons.sale.providers.sale.SalesOrderLineProvider"
            android:authorities="com.odoo.addons.sale.providers.sale.orderline"
            android:enabled="true"
            android:exported="false"
            android:label="Quotation/SalesOrderLine"
            android:syncable="true" />
        <provider
            android:name="com.odoo.addons.sale.providers.sale.ProductProvider"
            android:authorities="com.odoo.addons.sale.providers.sale.product"
            android:enabled="true"
            android:exported="false"
            android:label="Quotation/Product"
            android:syncable="true" />
        <provider
            android:name="com.odoo.addons.sale.providers.sale.ResCurrencyProvider"
            android:authorities="com.odoo.addons.sale.providers.sale.rescurrency"
            android:enabled="true"
            android:exported="false"
            android:label="Res Currency"
            android:syncable="true" />

        <service
            android:name="com.odoo.addons.sale.services.SalesService"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/sync_sale_data" />
        </service>
        <service
            android:name="com.odoo.addons.partners.services.PartnerService"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/sync_partner_data" />
        </service>

        <!-- Phone state receiver -->
        <receiver android:name="com.odoo.addons.crm.receivers.PhoneStateReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.odoo.addons.crm.receivers.PhoneStateReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.NEW_OUTGOING_CALL" />
            </intent-filter>
        </receiver>
    </application>

</manifest>