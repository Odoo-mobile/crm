<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="DrawerIconView">
        <attr name="tint" format="reference|color" />
    </declare-styleable>
    <!-- Odoo Controls -->

    <declare-styleable name="OField">
        <attr name="field_name" format="string" />
        <attr name="editable" format="boolean" />
        <attr name="with_label" format="boolean" />
        <attr name="field_textAppearance" format="reference" />
        <attr name="label_textAppearance" format="reference" />
        <attr name="label_color" format="color" />
        <attr name="field_color" format="color" />
        <attr name="fieldTextStyle" format="string" />
        <attr name="singleLine" format="boolean" />
        <attr name="textLines" format="integer" />
        <attr name="showAsText" format="boolean" />
        <attr name="displayPattern" format="string" />
        <attr name="ref_column" format="string" />
        <attr name="binaryType">
            <enum name="image" value="0" />
            <enum name="file" value="1" />
            <enum name="round_image" value="3" />
        </attr>
        <attr name="imageWidthHeight" format="integer" />
        <attr name="booleanWidget">
            <enum name="switch_widget" value="0" />
            <enum name="radio_widget" value="1" />
            <enum name="checkbox_widget" value="2" />
        </attr>
        <attr name="defaultImage" format="reference" />
        <attr name="customLayout" format="reference" />
        <attr name="label_bottom_border_height" format="integer" />
        <attr name="customLayoutOriantation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="readMoreButton" format="boolean" />
        <attr name="widget">
            <enum name="many_to_one_searchable" value="0" />
        </attr>
        <attr name="widgetTitle" format="string|reference" />
    </declare-styleable>
    <declare-styleable name="OLabel">
        <attr name="label" format="string" />
        <attr name="textAppearance" format="reference" />
        <attr name="labelColor" format="color" />
        <attr name="bottom_border_height" format="integer" />
    </declare-styleable>
    <declare-styleable name="OList">
        <attr name="custom_layout" format="reference" />
        <attr name="rowSwipable" format="boolean" />
        <attr name="showAsCard" format="boolean" />
        <attr name="groupBy" format="string" />
        <attr name="showDivider" format="boolean" />
        <attr name="emptyListMessage" format="string" />
        <attr name="emptyListIcon" format="reference" />
    </declare-styleable>
    <declare-styleable name="OForm">
        <attr name="background_selector" format="reference" />
        <attr name="model" format="string" />
        <attr name="background_selector_boolean_field" format="string" />
        <attr name="true_background_selector" format="reference" />
        <attr name="false_background_selector" format="reference" />
        <attr name="autoUIGenerate" format="boolean" />
    </declare-styleable>
    <declare-styleable name="OManyToOneWidget">
        <attr name="model_name" format="string" />
        <attr name="column_name" format="string" />
    </declare-styleable>
    <declare-styleable name="OViewPager">
        <attr name="pager_model" format="string" />
        <attr name="view_column_name" format="string" />
    </declare-styleable>
    <declare-styleable name="BezelImageView">
        <attr name="maskDrawable" format="reference" />
        <attr name="borderDrawable" format="reference" />
        <attr name="desaturateOnPress" format="boolean" />
    </declare-styleable>
    <declare-styleable name="FloatingActionButton">
        <attr name="drawable" format="integer" />
        <attr name="fabColor" format="color" />
        <attr name="shadowRadius" format="float" />
        <attr name="shadowDx" format="float" />
        <attr name="shadowDy" format="float" />
        <attr name="shadowColor" format="integer" />
    </declare-styleable>
    <declare-styleable name="OCollectionView">
        <attr name="emptyIcon" format="reference" />
        <attr name="emptyMessage" format="reference" />
    </declare-styleable>
    <declare-styleable name="OSearchableMany2One">
        <attr name="dataModel" format="string" />
        <attr name="displayLayout" format="reference" />
        <attr name="widget_title" format="string|reference" />
    </declare-styleable>
    <declare-styleable name="ODrawerScrollView">
        <attr name="insetForeground" format="reference|color" />
    </declare-styleable>

</resources>