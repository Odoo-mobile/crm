<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:odoo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:paddingTop="?android:attr/actionBarSize" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <odoo.controls.OForm
            android:id="@+id/odooFormQuotations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:visibility="gone"
            odoo:model="sale.order" >

            <odoo.controls.OField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                odoo:field_name="name"
                odoo:field_textAppearance="?android:attr/textAppearanceMedium"
                odoo:label_bottom_border_height="0"
                odoo:label_color="@color/odoo_purple" />

            <odoo.controls.OField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                odoo:field_name="partner_id"
                odoo:label_bottom_border_height="0"
                odoo:label_color="@color/odoo_purple" />

            <odoo.controls.OField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                odoo:field_name="date_order"
                odoo:label_bottom_border_height="0"
                odoo:label_color="@color/odoo_purple" />

            <odoo.controls.OField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                odoo:customLayout="@layout/sale_order_custom_view"
                odoo:field_name="order_line"
                odoo:label_bottom_border_height="0"
                odoo:label_color="@color/odoo_purple" />
        </odoo.controls.OForm>
