<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:odoo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <odoo.controls.OForm
            android:id="@+id/odooFormRes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            odoo:model="res.partner" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <odoo.controls.OField
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    odoo:binaryType="image"
                    odoo:field_name="image_small"
                    odoo:label_bottom_border_height="0"
                    odoo:label_color="@color/odoo_purple"
                    odoo:with_label="false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <odoo.controls.OField
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        odoo:field_name="name"
                        odoo:field_textAppearance="?android:attr/textAppearanceMedium"
                        odoo:label_bottom_border_height="0"
                        odoo:label_color="@color/odoo_purple"
                        odoo:with_label="false" />

                    <odoo.controls.OField
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        odoo:field_name="email"
                        odoo:label_bottom_border_height="0"
                        odoo:label_color="@color/odoo_purple"
                        odoo:with_label="false" />
                </LinearLayout>
            </LinearLayout>

            <odoo.controls.OField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                odoo:field_name="resAddress"
                odoo:label_bottom_border_height="1"
                odoo:label_color="@color/odoo_purple" />

            <!--
            <odoo.controls.OField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                odoo:field_name="street2"
                odoo:label_bottom_border_height="0"
                odoo:label_color="@color/odoo_purple"
                odoo:with_label="false" />

            <odoo.controls.OField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                odoo:field_name="city"
                odoo:label_bottom_border_height="0"
                odoo:label_color="@color/odoo_purple"
                odoo:with_label="false" />

            <odoo.controls.OField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                odoo:field_name="zip"
                odoo:label_bottom_border_height="0"
                odoo:label_color="@color/odoo_purple"
                odoo:with_label="false" />
            -->

            <odoo.controls.OField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                odoo:field_name="phone"
                odoo:label_bottom_border_height="1"
                odoo:label_color="@color/odoo_purple" />

            <odoo.controls.OField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                odoo:field_name="website"
                odoo:label_bottom_border_height="1"
                odoo:label_color="@color/odoo_purple" />
        </odoo.controls.OForm>
    </LinearLayout>

</ScrollView>