<odoo.controls.OForm xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:odoo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    odoo:background_selector="@drawable/oe_listview_background_selector"
    odoo:model="res.partner" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <odoo.controls.OField
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical"
            odoo:binaryType="round_image"
            odoo:defaultImage="@drawable/avatar"
            odoo:field_name="image_small"
            odoo:with_label="false" >
        </odoo.controls.OField>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <odoo.controls.OField
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="0dp"
                    odoo:fieldTextStyle="bold"
                    odoo:field_color="@color/odoo_purple"
                    odoo:field_name="name"
                    odoo:field_textAppearance="?android:attr/textAppearanceMedium"
                    odoo:singleLine="true"
                    odoo:with_label="false" />

                <ImageView
                    android:id="@+id/imgLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_action_location_place" />

                <ImageView
                    android:id="@+id/imgMail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_action_mark_unread" />

                <ImageView
                    android:id="@+id/imgCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_action_device_access_call" />
            </LinearLayout>

            <odoo.controls.OField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                odoo:field_name="resEmail"
                odoo:textLines="1"
                odoo:with_label="false" />

            <odoo.controls.OField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                odoo:field_name="resPhone"
                odoo:textLines="1"
                odoo:with_label="false" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <odoo.controls.OField
                    android:id="@+id/oCrmLeadCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/oe_listview_background_selector"
                    odoo:customLayoutOriantation="horizontal"
                    odoo:field_color="@color/odoo_purple"
                    odoo:field_name="crmLeadCount"
                    odoo:with_label="false" />

                <odoo.controls.OField
                    android:id="@+id/oSaleOrderCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/oe_listview_background_selector"
                    odoo:customLayoutOriantation="horizontal"
                    odoo:field_color="@color/odoo_purple"
                    odoo:field_name="salesOrdersCount"
                    odoo:with_label="false" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</odoo.controls.OForm>