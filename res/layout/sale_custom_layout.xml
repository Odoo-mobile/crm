<odoo.controls.OForm xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:odoo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    odoo:background_selector="?android:attr/listSelector"
    odoo:model="sale.order" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <odoo.controls.OField
            android:id="@+id/so_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            odoo:fieldTextStyle="bold"
            odoo:field_name="name"
            odoo:field_textAppearance="?android:attr/textAppearanceMedium"
            odoo:with_label="false" />

        <odoo.controls.OField
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            odoo:displayPattern="MMMM, dd"
            odoo:fieldTextStyle="bold"
            odoo:field_color="#626262"
            odoo:field_name="date_order"
            odoo:with_label="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <odoo.controls.OField
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            odoo:fieldTextStyle="bold"
            odoo:field_color="#686868"
            odoo:field_name="partner_id_name"
            odoo:with_label="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#aaa"
        android:dividerPadding="8dp"
        android:gravity="right"
        android:orientation="horizontal" >

        <odoo.controls.OField
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            odoo:field_color="@color/odoo_purple"
            odoo:field_name="state_title"
            odoo:with_label="false" />

        <odoo.controls.OField
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            odoo:fieldTextStyle="bold"
            odoo:field_name="amount_total"
            odoo:with_label="false" />

        <odoo.controls.OField
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            odoo:fieldTextStyle="bold"
            odoo:field_name="currency_id_symbol"
            odoo:with_label="false" />
    </LinearLayout>

</odoo.controls.OForm>