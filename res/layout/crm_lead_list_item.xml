<odoo.controls.OForm xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:odoo="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res/com.odoo.crm"
    android:id="@+id/crmLeadOppListItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    odoo:model="crm.lead"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <odoo.controls.OField
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:field_name="name"
                app:field_textAppearance="?android:attr/textAppearanceMedium"
                app:with_label="false" >
            </odoo.controls.OField>

            <odoo.controls.OField
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:field_name="type"
                app:with_label="false" >
            </odoo.controls.OField>
        </LinearLayout>

        <ImageView
            android:id="@+id/removeLead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/oe_listview_background_selector"
            android:clickable="true"
            android:src="@drawable/ic_action_remove"
            android:tint="@color/odoo_purple_tran" />
    </LinearLayout>

</odoo.controls.OForm>